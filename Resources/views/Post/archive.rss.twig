<?xml version="1.0" ?>
<rss version="2.0">
    <channel>
        <title>{{ blog.title }}{%if tag %} : {{ tag.name }}{%endif%}</title>
        <link>{{ blog.link }}</link>
        <description>{{ blog.description }}</description>
        {% for post in pager.getResults() %}
             <item>
                  <title>{{ post.title }}</title>
                  <link>{{ url('sonata_news_view', { 'permalink': post.permalink }, true) }}</link>
                  <description><![CDATA[ {{ post.abstract }} ]]></description>
                  <pubDate>{{ post.publicationDateStart | format_datetime('eee, MM LLL yyyy HH:mm:ss zzz')}}</pubDate>
                  <gui>{{ url('sonata_news_view', { 'permalink': post.permalink }, true) }}</gui>
             </item>
        {% endfor %}
    </channel>
</rss>