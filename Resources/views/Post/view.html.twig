<h1>{{ post.title }}</h1>

<div>
    {% thumbnail post.image, 'big' %}
</div>

<div>
    {{ post.content }}
</div>


{% render 'SonataNews:Post:comments' with {
    'post_id': post.id
} %}

{% if post.iscommentable %}
    {% render 'SonataNews:Post:addCommentForm' with {
        'post_id': post.id,
        'form': form
    } %}
{% else %}
    <div>
        {% trans 'message_comments_are_closed' from 'NewsBundle' %}
    </div>
{% endif %}