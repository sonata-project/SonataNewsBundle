<h2>{{ 'title_comments'|trans({}, 'SonataNewsBundle') }}</h2>

{% for comment in pager.results %}
    <div>
        <a href="{{ comment.url }}" target="new" rel="nofollow">{{ comment.name }}</a>
        <div>
            {{ comment.message }}
        </div>
    </div>
{% endfor %}
