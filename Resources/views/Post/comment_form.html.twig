<form action="{{ url('sonata_news_add_comment', {'id': post_id}) }}" method="POST" >
    <p>
        {{ form_label(form.name) }} <br />
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </p>
    <p>
        {{ form_label(form.email) }} <br />
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </p>

    <p>
        {{ form_label(form.url) }} <br />
        {{ form_widget(form.url) }}
        {{ form_errors(form.url) }}
    </p>

    <p>
        {{ form_label(form.message) }} <br />
        {{ form_widget(form.message) }}
        {{ form_errors(form.message) }}
    </p>

     {{ form_rest(form) }}


    <input type="submit" value="{{'btn_add_comment'|trans({}, 'SonataNewsBundle') }}" />
</form>

