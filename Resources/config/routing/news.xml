<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="sonata_news_view" pattern="/{year}/{month}/{day}/{slug}">
        <default key="_controller">Sonata\NewsBundle:Post:view</default>
    </route>

    <route id="sonata_news_add_comment" pattern="/add-comment/{id}">
        <default key="_controller">Sonata\NewsBundle:Post:addComment</default>
    </route>

    
    <route id="sonata_news_archive_daily" pattern="/{year}/{month}/{day}">
        <default key="_controller">Sonata\NewsBundle:Post:archiveDaily</default>
    </route>

    <route id="sonata_news_archive_monthly" pattern="/{year}/{month}">
        <default key="_controller">Sonata\NewsBundle:Post:archiveMonthly</default>
    </route>

    <route id="sonata_news_archive_yearly" pattern="/{year}">
        <default key="_controller">Sonata\NewsBundle:Post:archiveYearly</default>
    </route>

    <route id="sonata_news_archive" pattern="/">
        <default key="_controller">Sonata\NewsBundle:Post:archive</default>
    </route>
    
</routes>
