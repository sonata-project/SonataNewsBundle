<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">


    <class name="Application\Sonata\NewsBundle\Entity\Post">
        <property name="title">
            <constraint name="NotBlank">
                <option name="groups">admin</option>
            </constraint>

            <constraint name="NotNull">
                <option name="groups">admin</option>
            </constraint>
        </property>

        <property name="abstract">
            <constraint name="NotNull">
                <option name="groups">admin</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">admin</option>
            </constraint>
        </property>

        <property name="author">
            <constraint name="Valid" />
        </property>

        <property name="content">
            <constraint name="NotNull">
                <option name="groups">admin</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">admin</option>
            </constraint>
        </property>

        <!--<property name="comments">-->
            <!--&lt;!&ndash; Iterate through the Array of comments&ndash;&gt;-->
            <!--<constraint name="Collection">-->
                <!--<option name="fields">-->
                    <!--<value key="0">-->
                         <!--&lt;!&ndash;<constraint name="Valid" />&ndash;&gt;-->
                    <!--</value>-->
                <!--</option>-->
                <!--<option name="allowExtraFields">true</option>-->
            <!--</constraint>-->

            <!--<constraint name="Valid" />-->
        <!--</property>-->

    </class>

    <class name="Application\Sonata\NewsBundle\Entity\Comment">
        <property name="name">
           <constraint name="NotBlank" />
           <constraint name="NotNull" />
        </property>

        <property name="email">
            <constraint name="NotNull" />
            <constraint name="NotBlank" />
            <constraint name="Email" />
        </property>

        <property name="url">
           <constraint name="Url" />
        </property>

        <property name="message">
            <constraint name="NotNull" />
            <constraint name="NotBlank" />
        </property>

    </class>

    <class name="Application\Sonata\NewsBundle\Entity\Tag">
        <property name="name">
           <constraint name="NotBlank" />
           <constraint name="NotNull" />
        </property>
    </class>

</constraint-mapping>
